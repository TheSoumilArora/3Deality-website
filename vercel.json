{
  "rewrites": [
    { "source": "/store/:path*", "destination": "https://api.3deality.in/store/:path*" },
    { "source": "/app/:path*", "destination": "https://api.3deality.in/app/:path*" },
    { "source": "/app", "destination": "https://api.3deality.in/app" },
    { "source": "/app/", "destination": "https://api.3deality.in/app" },
    { "source": "/auth/:path*", "destination": "https://api.3deality.in/auth/:path*" },   // <-- add this line
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}